@page
@model IndexModel
@{
    ViewData["Title"] = "Já vi";
}


<section>
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="Imagens/organize.png" class="d-block w-100" alt="Logo Já Vi">
            </div>
            <div class="carousel-item">
                <img src="Imagens/game.jpeg" class="d-block w-100" alt="Imagem Game of Thrones">
            </div>
            <div class="carousel-item">
                <img src="Imagens/Doutor.jpeg" class="d-block w-100" alt="Doctor Strange">
            </div>
            <div class="carousel-item">
                <img src="Imagens/theboys.jpg" class="d-block w-100" alt="Série The Boys">
            </div>
            <div class="carousel-item">
                <img src="Imagens/auto.jpeg" class="d-block w-100" alt="Filme o Auto da Compadecida">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>

        </div>
        </section>
        <div class="text-center">
            <h1 class="display-4"><strong>Bem-vindo (a)!</strong></h1>
            <p>Aqui você pode cadastrar seus filmes e séries que já assistiu!</p>
            <p> Organize tudo que já assistiu, incluindo notas e comentários.</p>
        </div>

