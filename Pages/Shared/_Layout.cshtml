<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Já Vi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projecto_JaVi.styles.css" asp-append-version="true" />

</head>
<body>
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <a asp-area="" asp-page="/Index" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5ZM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5 5 5Z" />
            </svg>
        </a>

        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link active" aria-current="page" asp-area="" asp-page="/Index">Home</a></li>
            <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Privacy">Sobre nós</a></li>
            <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Filmes/Index">Seus Filmes</a></li>
            <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Series/Index">Suas Séries</a></li>
            <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Contactos/Index">Comentários</a></li>
        </ul>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    

    <footer class="py-3 my-4">
        <ul class="nav justify-content-center border-bottom pb-3 mb-3">
            <li class="nav-item"><a class="nav-link px-2 text-muted" asp-area="" asp-page="/Index">Home</a></li>
            <li class="nav-item"><a class="nav-link px-2 text-muted" asp-area="" asp-page="/Privacy">Sobre nós</a></li>
            <li class="nav-item"><a class="nav-link px-2 text-muted" asp-area="" asp-page="/Filmes/Index">Seus Filmes</a></li>
            <li class="nav-item"><a class="nav-link px-2 text-muted" asp-area="" asp-page="/Series/Index">Suas Séries</a></li>
            <li class="nav-item"><a class="nav-link px-2 text-muted" asp-area="" asp-page="/Contactos/Index">Comentários</a></li>
        </ul>
        <p class="text-center text-muted">© 2022 Projecto realizado por Milena Gonçalves, Débora Andrade e Ester Verissímo</p>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
